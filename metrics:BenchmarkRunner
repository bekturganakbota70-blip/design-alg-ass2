package metrics;

//package cli;

import algorithms.InsertionSort;
import metrics.CSVExporter;

import java.util.Random;

public class BenchmarkRunner {

    private static int[] generateRandomArray(int n) {
        Random rand = new Random();
        int[] arr = new int[n];
        for (int i = 0; i < n; i++) {
            arr[i] = rand.nextInt(10000);
        }
        return arr;
    }

    public static void main(String[] args) {
        InsertionSort sorter = new InsertionSort();
        CSVExporter exporter = new CSVExporter("benchmark_results.csv");

        int[] sizes = {100, 1000, 10000}; // can add 100000 later

        for (int n : sizes) {
            int[] arr = generateRandomArray(n);
            long start = System.nanoTime();
            sorter.sort(arr);
            long end = System.nanoTime();

            double timeMs = (end - start) / 1_000_000.0;
            System.out.printf("n=%d | time=%.3f ms | comparisons=%d | swaps=%d%n",
                    n, timeMs, sorter.getComparisons(), sorter.getSwaps());

            // Save to CSV
            exporter.writeResult(n, timeMs, sorter.getComparisons(), sorter.getSwaps());
        }

        System.out.println("Benchmark results saved to benchmark_results.csv");
    }
}
